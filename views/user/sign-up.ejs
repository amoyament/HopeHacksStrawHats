<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/login-sign.css" />
    <link rel="stylesheet" href="/css/header-footer.css">

    <script src="/js/header.js"></script>
    <title>Sign Up</title>
  </head>

  <body>
    <%- include('../header-footer/header.ejs') %>


    <div class="content">
      <div class="headings">
        <h1>Create Your Free Account</h1>
        <div class="border-container">
          <div class="border"></div>
      </div>
        <h2>
          To save information, get involved, receive our newsletter an much
          more, sing up for a free account
        </h2>
      </div>

      <form action="/user/signup" method="post">

        <div class="form-group-container">
          <div class="form-group">
            <label class="label" for="firstName">First Name:</label>
            <input
              class="input"
              type="text"
              id="firstname"
              name="firstName"
              required
              placeholder="First Name"
            />
          </div>
        </div>

        <div class="form-group-container">
          <div class="form-group">
            <label class="label" for="lastName">Last Name:</label>
            <input
              class="input"
              type="text"
              id="lastname"
              name="lastName"
              required
              placeholder="Last Name"
            />
          </div>
        </div>


       

        <div class="form-group-container">
          <div class="form-group">
            <label class="label" for="username">Username:</label>
            <input
              class="input"
              type="text"
              id="username"
              name="userName"
              required
              placeholder="Username"
            />
          </div>
        </div>

        <div class="form-group">
          <label class="label" for="email">Email:</label>
          <input
            class="input"
            type="email"
            id="email"
            name="email"
            required
            placeholder="Email"
          />
        </div>

        <div class="form-group-container">
          <div class="form-group checkbox">
            <label class="checkbox-label">
              <input type="checkbox" id="agree" name="agree" required />
              I agree to the terms and conditions.
            </label>
          </div>
        </div>

        <div class="form-group-container">
          <div class="form-group">
            <label class="label" for="password">Password:</label>
            <input
              class="input"
              type="password"
              id="password"
              name="password"
              required
              placeholder="Password"
            />
          </div>
        </div>

        <div class="form-group-container">
          <div class="form-group">
            <label class="label" for="birthdate">Birthdate:</label>
            <input
              class="input"
              type="date"
              id="birthdate"
              name="birthdate"
              required
            />
          </div>
        </div>

        <div class="submit-container">
          <input type="submit" class="submit" value="Register" />
        </div>
      </form>
    </div>

    <%- include('../header-footer/footer.ejs') %>

  </body>
</html>
