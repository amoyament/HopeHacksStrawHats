<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/js/header.js"></script>
    <link rel="stylesheet" href="/css/login-sign.css" />
    <link rel="stylesheet" href="/css/header-footer.css">

    <title>Log In</title>
  </head>

  <body>
    <%- include('../header-footer/header.ejs') %>

    <div class="content">
      <div class="headings">
        <h1>Log In</h1>
        <div class="border-container">
            <div class="border"></div>
        </div>
        
        <h2>No account? <a href="/user/signup">Sign up here</a></h2>
      </div>
      <div class="img-container">
        <img class="login-img" src="/imgs/login-img.png" alt="" />
      </div>

      <form action="/user" method="post">
        <div class="form-group-container">
          <div class="form-group">
            <label class="label" for="username">Username:</label>
            <input
              class="input"
              type="text"
              id="username"
              name="userName"
              required
              placeholder="Username"
            />
          </div>
        </div>

        <div class="form-group-container">
          <div class="form-group">
            <label class="label" for="password">Password:</label>
            <input
              class="input"
              type="password"
              id="password"
              name="password"
              required
              placeholder="Password"
            />
          </div>
        </div>

        <div class="form-group-container">
          <div class="form-group checkbox">
            <label class="checkbox-label">
              <input type="checkbox" id="agree" name="agree" required />
              I agree to the terms and conditions.
            </label>
          </div>
        </div>

        <div class="submit-container">
          <input type="submit" class="submit" value="Log In" />
        </div>
      </form>
    </div>

    <div class="forgot">
        <h2>
            <a href="/"> Forgot your username or password? </a>

        </h2>
    </div>

    <%- include('../header-footer/footer.ejs') %>

  </body>
</html>
